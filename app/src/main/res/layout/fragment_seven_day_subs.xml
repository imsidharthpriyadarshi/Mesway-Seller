<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.registration.SevenDaySubsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/up_wave"


        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:elevation="8dp"
            app:cardCornerRadius="@dimen/dp_10"
            android:alpha=".99"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintStart_toStartOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_background"
                >
                <TextView
                    android:id="@+id/t_want_to_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscription For 7 days"
                    android:layout_margin="@dimen/dp_20"
                    android:textSize="@dimen/dp_24"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_one_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/t_want_to_add"
                    >



                    <TextView
                        android:id="@+id/t_one_meal_per_day"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="1 meal/day  "
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="@dimen/dp_20"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etl_one_meal_per_day"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Price"
                        android:enabled="false"
                        android:layout_marginStart="@dimen/dp_90"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/t_one_meal_per_day"
                        app:layout_constraintTop_toTopOf="@+id/t_one_meal_per_day"
                        app:layout_constraintBottom_toBottomOf="@+id/t_one_meal_per_day">



                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_one_meal_per_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"

                            android:inputType="number"
                            android:textColor="@color/colorPrimary"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_two_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginHorizontal="@dimen/dp_20"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cons_one_meal"
                    >



                    <TextView
                        android:id="@+id/t_two_meal_per_day"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="2 meals/day"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="@dimen/dp_20"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etl_two_meal_per_day"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Price"
                        android:enabled="false"
                        android:layout_marginStart="@dimen/dp_90"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/t_two_meal_per_day"
                        app:layout_constraintTop_toTopOf="@+id/t_two_meal_per_day"
                        app:layout_constraintBottom_toBottomOf="@+id/t_two_meal_per_day">



                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_two_meal_per_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"

                            android:inputType="number"
                            android:textColor="@color/colorPrimary"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_three_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cons_two_meal"
                    >



                    <TextView
                        android:id="@+id/t_three_meal_per_day"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="3 meals/day"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="@dimen/dp_20"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etl_three_meal_per_day"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Price"
                        android:enabled="false"
                        android:layout_marginStart="@dimen/dp_90"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/t_three_meal_per_day"
                        app:layout_constraintTop_toTopOf="@+id/t_three_meal_per_day"
                        app:layout_constraintBottom_toBottomOf="@+id/t_three_meal_per_day">



                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_three_meal_per_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"
                            android:inputType="number"
                            android:textColor="@color/colorPrimary"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>







                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_security_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cons_three_meal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <TextView
                        android:id="@+id/t_security_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_18"
                        android:textColor="@color/black"
                        android:text="Security money for Tiffin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />


                    <CheckBox
                        android:id="@+id/checkbox_yes_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        app:layout_constraintTop_toBottomOf="@+id/t_security_money"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_no_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        app:layout_constraintTop_toBottomOf="@+id/t_security_money"
                        android:textColor="@color/black"
                        android:checked="true"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="@dimen/dp_10"
                        app:layout_constraintStart_toEndOf="@+id/checkbox_yes_security"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etl_security_amount"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Security amount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_yes_security">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_security_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"

                            android:inputType="number"
                            android:textColor="@color/colorPrimary"

                            />

                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <Button
                    android:id="@+id/btn_add_subs"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:enabled="false"
                    android:padding="@dimen/dp_15"

                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="Add Subscription"
                    android:textAllCaps="false"
                    android:textSize="@dimen/dp_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cons_security_money" />

                <LinearLayout
                    android:id="@+id/linear_loader"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="true"
                    android:visibility="gone"
                    android:gravity="center"
                    android:background="@drawable/bg_linear_progress_loader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteX="306dp"
                    tools:layout_editor_absoluteY="11dp"
                    android:focusable="true">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </com.google.android.material.card.MaterialCardView>







    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>